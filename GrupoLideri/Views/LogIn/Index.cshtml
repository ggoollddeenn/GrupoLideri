@model GrupoLideri.Models.DO_Persona
@using GrupoLideri.Models
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Grupo Lideri</title>

    <!-- Import google fonts - Heading first/ text second -->
    <link href='http://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700&amp;subset=all' rel='stylesheet' type='text/css'>

    <!-- Css files -->
    <!-- Icons -->
    <link href="@Url.Content("~/assets/dash/css/icons/font-awesome.css")" rel="stylesheet" />
    <!-- Bootstrap stylesheets -->
    <link href="@Url.Content("~/assets/dash/css/bootstrap/bootstrap.css")" rel="stylesheet" />
    <!-- Main stylesheets (template main css file) -->
    <link href="@Url.Content("~/assets/dash/css/main.css")" rel="stylesheet" />
    <!-- Plugins stylesheets (all plugin custom css) -->
    <link href="@Url.Content("~/assets/dash/css/plugins.css")" rel="stylesheet" />
    <!-- Theme stylesheets ( Theme css file ) -->
    <link href="@Url.Content("~/assets/dash/css/theme/theme-default.css")" rel="stylesheet" />
    <!-- Responsive stylesheets ( breakpoints responsive styles ) -->
    <link href="@Url.Content("~/assets/dash/css/responsive.css")" rel="stylesheet" />
    <!-- Custom stylesheets ( Put your own changes here ) -->
    <link href="@Url.Content("~/assets/dash/css/custom.css")" rel="stylesheet" />


    <meta name="theme-color" content="#ffffff">

</head>
<body class="login-page">
    <div class="container">
        <h3 class="text-center color-white">Inicio de sesión</h3>
    </div>

    <!-- Start login container -->
    <div class="container login-container">
        <div class="login-panel panel plain">
            <!-- Start .panel -->
            <div class="panel-body p0">
                <div class="text-center mb30">
                    @*<img src="~/assets/dash/img/logo-blue.png" alt="logo" />*@
                    <img src="~/assets/img/Logotipo.png" width="180" height="120" />
                </div>
                @{
                    using (Html.BeginForm("Ingresar", "LogIn", Model, FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <form class="form-horizontal mt0" action="~/Views/Home/Index.cshtml" id="login-form" role="form">
                            <div class="form-group">
                                <div class="col-lg-12">
                                    <div class="input-group input-icon">
                                        <span class="input-group-addon input-group-lg"><i class="fa fa-envelope"></i></span>
                                        @*<input type="text" name="email" id="email" class="form-control input-lg" placeholder="Usuario">*@
                                        @Html.TextBoxFor(model => model.Usuario, new { id = "email", @class = "form-control input-lg", placeholder = "Usuario" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-lg-12">
                                    <div class="input-group input-icon">
                                        <span class="input-group-addon input-group-lg"><i class="fa fa-key"></i></span>
                                        @*<input type="password" name="password" id="password" class="form-control input-lg" placeholder="Contraseña">*@

                                        @Html.PasswordFor(model => model.Contrasena, new { id = "password", @class = "form-control input-lg", placeholder = "Contraseña" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group mb0">
                                <div class="col-lg-12 mt30">
                                    <button class="btn btn-danger btn-lg btn-block uppercase" type="submit"><i class="fa fa-unlock-alt mr5"></i>Iniciar Sesión</button>
                                </div>
                            </div>
                        </form>
                    }
                }
                
            </div>
        </div>
    </div>
    <div class="container">
        <div class="footer-links">
            <p class="text-center mb5">
                <a href="user-register.html" class="color-gray-lighter color-hover-white s16 transition">¿Quieres trabajar con nosotros?</a>
            </p>
            <p class="text-center mb5">
                <a href="user-forgot.html" class="color-gray-lighter color-hover-white s16 transition"> ¿Olvido su contraseña?</a>
            </p>
        </div>
    </div>


    <!-- Javascripts -->
    <!-- Important javascript libs(put in all pages) -->
    <script src="http://code.jquery.com/jquery-2.1.4.min.js"></script>
    <script>
        window.jQuery || document.write('<script src="js/libs/jquery.min.js">\x3C/script>')
    </script>
    <script src="http://code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    <script>
        window.jQuery || document.write('<script src="js/libs/jquery-ui-1.11.4.min.js">\x3C/script>')
    </script>

    <!-- Bootstrap plugins -->
    <script src="~/assets/dash/js/bootstrap/bootstrap.js"></script>
    <!-- Core plugins ( not remove ) -->
    <script src="~/assets/dash/js/libs/modernizr.custom.js"></script>
    <script src="~/assets/dash/js/libs/jRespond.js"></script>
    <script src="~/assets/dash/plugins/core/retinajs/retina.js"></script>
    <!-- Remove click delay in touch -->
    <script src="~/assets/dash/plugins/core/fastclick/fastclick.js"></script>
    <!-- Form plugins -->
    <script src="~/assets/dash/plugins/forms/validation/jquery.validate.js"></script>
    <script src="~/assets/dash/plugins/forms/validation/additional-methods.min.js"></script>
    <!-- Init plugins olny for this page -->
    <script src="~/assets/dash/js/pages/user-login.js"></script>
</body>
</html>
